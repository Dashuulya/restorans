<Window x:Class="restoran.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:restoran"
        mc:Ignorable="d"
        Title="Авторизация" MaxHeight="300" MaxWidth="400" SizeToContent="WidthAndHeight">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ff8597" Offset="0.0"/>
            <GradientStop Color="#ffc2cc" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация"
            FontSize="24"
            FontWeight ="Bold"
            Foreground="#333"
            HorizontalAlignment="Center"
            Margin="0,10"
            FontFamily="Bahnschrift"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Логин:" FontWeight ="Bold" FontSize="14" Foreground="#444"/>
            <TextBox x:Name="txtUsername"
                     Margin="0, 5, 0, 10"
                     Height="35"
                     Background="White"
                     BorderBrush="#CCC"
                     BorderThickness="2"/>
            <TextBlock Text="Пароль:" FontWeight ="Bold" FontSize="14" Foreground="#444"/>
            <PasswordBox x:Name="txtPassword"
                     Margin="0, 5, 0, 10"
                     Height="35"
                     Background="White"
                     BorderBrush="#CCC"
                     BorderThickness="2"/>
            <Button Content="Вход"
                    Width="120"
                    Height="30"
                    Background="#cfcfcf"
                    Foreground="#444"
                    FontFamily="Bold"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    Margin="0, 10, 0, 0"
                    BorderThickness="0" Click="Button_Click"
                    />
        </StackPanel>


    </Grid>
</Window>
