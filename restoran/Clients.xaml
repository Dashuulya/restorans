<Window x:Class="restoran.Clients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:restoran"
        mc:Ignorable="d"
        Title="Clients" Height="450" Width="500">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ff8597" Offset="0.0"/>
            <GradientStop Color="#ffc2cc" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Данные клиента" Margin="0, 5, 0, 15" FontWeight ="Bold" FontSize="14" Foreground="#444" HorizontalAlignment="Center"/>
            <TextBlock Text="Имя клиента" HorizontalAlignment="Center" FontWeight ="Bold" FontSize="14" Foreground="#444"/>
            <TextBox Margin="0, 5, 0, 10" Height="35" x:Name="LastNameTextBox"/>
            <TextBlock Text="Фамилия клиента" HorizontalAlignment="Center" FontWeight ="Bold" FontSize="14" Foreground="#444"/>
            <TextBox Margin="0, 5, 0, 10" Height="35" x:Name="FirstNameTextBox"/>
            <TextBlock Text="email клиента" HorizontalAlignment="Center" FontWeight ="Bold" FontSize="14" Foreground="#444"/>
            <TextBox Margin="0, 5, 0, 10" Height="35" x:Name="EmailTextBox"/>
            <TextBlock Text="phone клиента" HorizontalAlignment="Center" FontWeight ="Bold" FontSize="14" Foreground="#444"/>
            <TextBox Margin="0, 5, 0, 10" Height="35" x:Name="PhoneTextBox"/>
            <Button Content="Забронировать"
            Width="120"
            Height="30"
            Background="#cfcfcf"
            Foreground="#444"
            FontFamily="Bold"
            HorizontalAlignment="Center"
            Cursor="Hand"
            Margin="0, 10, 0, 0"
            BorderThickness="0" Click="Button_Click"
            />
        </StackPanel>

    </Grid>
</Window>
